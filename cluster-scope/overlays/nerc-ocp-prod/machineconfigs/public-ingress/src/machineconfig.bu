variant: openshift
version: 4.10.0
metadata:
  name: public-ingress
  labels:
    machineconfiguration.openshift.io/role: "worker"
storage:
  files:
    - path: /etc/nftables/public-ingress.nft
      mode: 0644
      contents:
        local: public-ingress.nft
    - path: /etc/NetworkManager/dispatcher.d/public-ingress-routes
      mode: 0755
      contents:
        local: public-ingress-routes.sh
